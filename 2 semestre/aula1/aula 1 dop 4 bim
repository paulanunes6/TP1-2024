    <script>

        let can1= 0; can2= 0 ;can3=0
        
        function cachorro(){
            can1++
             alert("Você votou no Cachorro " + can1)

        }
        function gato(){
            can2++
            alert("Você votou no Gato" +can2)
        }
        function papagaio(){
            can3++
            alert("Você votou no Papagaio" +can3)
        }
        function Reiniciar(){
            can1= 0; can2= 0 ;can3=0
            let result1 = document.getElementById("textoresul1")
            let result2 = document.getElementById("textoresul2")
            let result3 = document.getElementById("textoresul3")
            result1.innerText = ""
            result2.innerText = ""
            result3.innerText = ""

        }
        function mostrar(){
            let result1 = document.getElementById("textoresul1")
            let result2 = document.getElementById("textoresul2")
            let result3 = document.getElementById("textoresul3")
            result1.innerText = can1
            result2.innerText = can2
            result3.innerText = can3
 
        }
        let total = can1+can2+can3
    
    </script>
